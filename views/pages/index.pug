extends ../layouts/base
include ../mixins/responsive-image

block head
    link(rel="stylesheet" href="/css/pages/homepage.css")
    script(type="module" src="/js/homepage.js")
    +preloadImage("mascot.webp")

block content
    main
        header.page-header.container
            h1 Bleed Blue Fantasy Football #{leagueState.season}

        section.previous-season-outcome.container
            .winner
                +responsiveImage(
                    "mascot.webp",
                    "eager", "sync", "high",
                    "bleed blue fantasy football mascot",
                    "hero-image"
				)
                .card-body
                    h2 #{prevLeagueSeason} Season Champ
                    p #{winner.teamName}
            .loser
                +responsiveImage(
                    "sad-mascot.webp",
                    "eager", "sync", "high",
                    "bleed blue fantasy football sad mascot",
                    "hero-image"
				)
                .card-body
                    h2 #{prevLeagueSeason} Season Sacko
                    p #{loser.teamName}      
        section.matchups-cta.container
            h2 Check Out League Matchups
            a.btn(href="/matchups") League Matchups
