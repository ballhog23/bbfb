extends ../layouts/base
include ../mixins/icons.pug
include ../mixins/stat-card.pug
include ../mixins/champion-card.pug

block head
	link(rel="prefetch" href="/assets/winner-mascot.webp" as="image" type="image/webp")
	script(type="module" src="/js/trophy-room.js")
	link(rel="stylesheet" href="/css/pages/trophy-room.css")

block content
	-
		const stats = [
			{ icon: 'trophy', value: '5', label: 'Championships', sublabel: 'Total seasons played' },
			{ icon: 'users', value: '4', label: 'Unique Champions', sublabel: 'Different winners' },
			{ icon: 'crown', value: '2x', label: 'Dynasty Leader', sublabel: 'Mike Johnson' },
			{ icon: 'trending-up', value: '178', label: 'Record Finals Score', sublabel: 'Mike Johnson (2024)' }
		]

	main
		header.page-header.container
			img.hero-icon(src="/assets/winner-mascot.webp" alt="League champion mascot" loading="eager" decoding="sync")
			h1
				+iconCrown()
				span Hall of Champions
				+iconCrown()
			p.hero-description Celebrating 5 seasons of glory and shit talking.

		section.stats-grid.container
			each stat in stats
				+statCard(stat)

		section.champions-grid.container
			each champ, i in champions
				+championCard(champ, i === 0)
