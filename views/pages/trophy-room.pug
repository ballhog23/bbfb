extends ../layouts/base
include ../mixins/icons.pug
include ../mixins/stat-card.pug
include ../mixins/champion-card.pug

block head
	link(rel="prefetch" href="/assets/winner-mascot.webp" as="image" type="image/webp")
	script(type="module" src="/js/trophy-room.js")
	link(rel="stylesheet" href="/css/pages/trophy-room.css")

block content
	-
		const stats = [
			{ icon: 'trophy', value: '5', label: 'Championships', sublabel: 'Total seasons played' },
			{ icon: 'users', value: '4', label: 'Unique Champions', sublabel: 'Different winners' },
			{ icon: 'crown', value: '2x', label: 'Dynasty Leader', sublabel: 'Mike Johnson' },
			{ icon: 'trending-up', value: '178', label: 'Record Finals Score', sublabel: 'Mike Johnson (2024)' }
		]

	-
		const champions = [
			{
				season: '2024',
				name: 'Mike Johnson',
				team: 'Touchdown Titans',
				record: '13-1',
				totalPts: '2,287',
				finalsScore: '178',
				mvp: 'Josh Allen',
				defeated: 'David Chen - Gridiron Gladiators',
				quote: '"Dominated all season with the highest scoring offense in league history"'
			},
			{
				season: '2023',
				name: 'Sarah Williams',
				team: 'Fantasy Queens',
				record: '11-3',
				totalPts: '2,145',
				finalsScore: '156',
				mvp: 'Travis Kelce',
				defeated: 'Mike Johnson - Touchdown Titans',
				quote: '"First female champion in league history!"'
			},
			{
				season: '2022',
				name: 'David Chen',
				team: 'Gridiron Gladiators',
				record: '10-4',
				totalPts: '2,089',
				finalsScore: '142',
				mvp: 'Justin Jefferson',
				defeated: 'Jake Thompson - End Zone Eagles',
				quote: '"Won the chip as the 4 seed underdog"'
			},
			{
				season: '2021',
				name: 'Mike Johnson',
				team: 'Touchdown Titans',
				record: '12-2',
				totalPts: '2,198',
				finalsScore: '165',
				mvp: 'Cooper Kupp',
				defeated: 'Sarah Williams - Fantasy Queens',
				quote: '"Back-to-back championship run begins"'
			},
			{
				season: '2020',
				name: 'Jake Thompson',
				team: 'End Zone Eagles',
				record: '9-5',
				totalPts: '1,987',
				finalsScore: '138',
				mvp: 'Davante Adams',
				defeated: 'Alex Rivera - Sunday Funday',
				quote: '"COVID season champion - never forget!"'
			}
		]

	main
		header.page-header.container
			img.hero-icon(src="/assets/winner-mascot.webp" alt="League champion mascot" loading="eager" decoding="sync")
			h1
				+iconCrown()
				span Hall of Champions
				+iconCrown()
			p.hero-description Celebrating 5 seasons of glory and shit talking.

		section.stats-grid.container
			each stat in stats
				+statCard(stat)

		section.champions-grid.container
			each champ, i in champions
				+championCard(champ, i === 0)
