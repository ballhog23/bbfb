extends ../layouts/base
include ../mixins/icons.pug
include ../mixins/stat-card.pug
include ../mixins/champion-card.pug
include ../mixins/responsive-image

block head
	+preloadImage("winner-mascot.webp")
	script(type="module" src="/js/champions-hall.js")
	link(rel="stylesheet" href="/css/pages/champions-hall.css")

block content
	-
		const statCards = [
			{ icon: 'trophy', value: stats.totalChampionships, label: 'Championships', sublabel: 'Total sleeper seasons' },
			{ icon: 'users', value: stats.uniqueChampions, label: 'Unique Champions', sublabel: 'Different winners' },
			{ icon: 'crown', value: stats.dynastyLeader.championships + 'x', label: 'Dynasty Leader', sublabel: stats.dynastyLeader.team || stats.dynastyLeader.displayName },
			{ icon: 'trending-up', value: stats.recordFinalsScore.points, label: 'Record Finals Score', sublabel: stats.recordFinalsScore.team || stats.recordFinalsScore.displayName }
		]

	main
		header.page-header.container
			+responsiveImage(
				"winner-mascot.webp",
				"eager", "sync", "high",
				"bleed blue fantasy football champion mascot",
				"hero-image"
				)
			h1
				+iconCrown()
				span Hall of Champions
				+iconCrown()
			p.hero-description Celebrating #{stats.totalChampionships} seasons of glory and shit talking.

		section.stats-grid.container
			each stat in statCards
				+statCard(stat)

		section.champions-grid.container
			each champ, i in champions
				+championCard(champ, i === 0)
