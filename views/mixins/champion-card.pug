include ./icons.pug

mixin championCard(champ, isReigning)
	- const hasTeamName = champ.team ? champ.team : champ.name
	- const isTwistedTitTeas = champ.name && champ.name.toLowerCase().includes('twistedtitteas')
	- const avatarSrc = isTwistedTitTeas ? champ.ownerImage : champ.avatar ? champ.avatar : champ.ownerImage
	.champion-card-wrapper
		if isReigning
			.reigning-badge
				+iconStar()
				span Reigning Champion
		.champion-card
			.card-accent-bar
			.card-body
				.card-header
					div
						.card-season-label Season
						.card-season= champ.season
					.card-trophy-icon
						+iconTrophy()
				.card-champion
					.card-avatar
						img(src=avatarSrc alt=`${hasTeamName} avatar image` loading="lazy" decoding="async")
					div
						h2= champ.team
				.card-stats
					.card-stat
						.card-stat-label
							+iconTarget()
							span Record
						.card-stat-value= champ.wins + '/' + champ.losses
					.card-stat
						.card-stat-label
							+iconZap()
							span Total Pts
						.card-stat-value= champ.totalPts
					.card-stat
						.card-stat-label
							+iconTrophy()
							span Finals Score
						.card-stat-value= champ.finalsScore
					.card-stat
						.card-stat-label
							+iconMedal()
							span MVP
						.card-stat-value= champ.mvp
				.card-defeated
					+iconMedal()
					span Defeated
					span= champ.defeated
				.card-quote
					p= champ.quote
