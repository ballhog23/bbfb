include ./icons.pug

mixin sackoCard(sacko, isReigning)
	- const hasTeamName = sacko.team ? sacko.team : sacko.name
	- const isTwistedTitTeas = sacko.name && sacko.name.toLowerCase().includes('twistedtitteas')
	- const avatarSrc = isTwistedTitTeas ? sacko.ownerImage : sacko.avatar ? sacko.avatar : sacko.ownerImage
	.sacko-card-wrapper
		if isReigning
			.reigning-badge
				+iconSkull()
				span Reigning Sacko
		.sacko-card
			.card-accent-bar
			.card-body
				.card-header
					div
						.card-season-label Season
						.card-season= sacko.season
					.card-trophy-icon
						+iconSkull()
				.card-champion
					.card-avatar
						img(src=avatarSrc alt=`${hasTeamName} avatar image` loading="lazy" decoding="async")
					div
						h3= sacko.team
				.card-stats
					.card-stat
						.card-stat-label
							+iconTarget()
							span Record
						.card-stat-value= sacko.wins + '/' + sacko.losses
					.card-stat
						.card-stat-label
							+iconZap()
							span Total Pts
						.card-stat-value= sacko.totalPts
					.card-stat
						.card-stat-label
							+iconTrophy()
							span Finals Score
						.card-stat-value= sacko.finalsScore
					.card-stat
						.card-stat-label
							+iconMedal()
							span MVP
						.card-stat-value= sacko.mvp
				.card-defeated
					+iconMedal()
					span Defeated by
					span= sacko.defeatedBy
				.card-quote
					p= sacko.quote
