mixin playerRow(player)
    .player-card
        img.player-avatar(
            src=player.playerImage || "https://placehold.co/50",
            alt=`${player.playerName} headshot`
            loading='lazy'
            decoding='async'
        )

        .player-info
            .player-name #{player.playerName}
            .player-meta
                span.player-position(class=`pos-${player.position.toLowerCase()}`)= player.position
                if player.team
                    span.player-team #{player.team}

        if player.points != null
            .player-stats
                span.stat-value #{player.points}
