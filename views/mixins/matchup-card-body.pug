mixin matchupCardBody(match)
    - const homeTeam = match[0];
    - const awayTeam = match[1];
    - const hasTeamName = (t) => t.team ? t.team : t.owner;
    - const resultClass = (t1, t2) => { const a = parseFloat(t1.points) || 0; const b = parseFloat(t2.points) || 0; return a > b ? 'winner' : a < b ? 'loser' : ''; };
    - const imageURL = (t) => t.teamImage ?? t.ownerImage;

    section.home-team(class=resultClass(homeTeam, awayTeam))
        img(
            src= imageURL(homeTeam),
            alt= hasTeamName(homeTeam) + ' team logo'
            loading='lazy'
            decoding='async'
        )
        .team-details
            h3= hasTeamName(homeTeam)
            p= homeTeam.points
    span.vs vs
    section.away-team(class=resultClass(awayTeam, homeTeam))
        img(
            src= imageURL(awayTeam),
            alt= hasTeamName(awayTeam) + ' team logo'
            loading='lazy'
            decoding='async'
        )
        .team-details
            h3= hasTeamName(awayTeam)
            p= awayTeam.points